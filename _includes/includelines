{%- capture filecontent -%}
{%- include {{include.filename}} -%}
{%- endcapture -%}
{% capture newline %}
{% endcapture %}
{%- assign lines = filecontent | newline_to_br | split: '<br />' -%}
{%- for iline in (0..lines.size) -%}
{%- if iline >= {{include.start}} and iline <= {{include.end}} -%}
{{lines[iline] | rstrip | strip_newlines }}
{%- endif -%}
{%- if iline >= {{include.start}} and iline < {{include.end}} -%}
{{newline}}
{%- endif -%}
{%- endfor -%}